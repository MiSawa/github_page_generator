<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <% title = current_page.metadata[:title] %>
    <% title ||= current_page.data.title %>
    <% title ||= "No title" %>
    <title><%= title %></title>

    <%= stylesheet_link_tag 'normalize', 'all', 'rouge' %>
    <%= javascript_include_tag 'base' %>
    <% if current_page.metadata[:header] %>
        <%= current_page.metadata[:header] %>
    <% end %>
    <% if build? %>
      <script>
(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
 (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
 m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
 })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
ga('create', 'UA-25117970-3', 'misawa.github.io');
ga('require', 'linkid', 'linkid.js');
ga('require', 'displayfeatures');
ga('send', 'pageview');
      </script>
    <% end %>
  </head>

  <body class='<%= page_classes %>'>
  <div id='menu'>
    <ul>
      <li> <%= link_to 'top', '/index.html' %> </li>
      <li> <%= link_to 'tags', '/tags/index.html' %> </li>
      <li> <%= link_to 'AOJ/10000', '/aoj/10000.html' %> </li>
    </ul>
  </div>
  <div id='main'>
    <%= yield %>
    <% if (current_page.respond_to? :tags) && !current_page.tags.empty?%>
      <h3>Tags</h3>
      <% current_page.tags.each do |tag| %>
        <div class='tag'><%= link_to tag, tagpage_url(tag) %></div>
      <% end %>
    <% end %>
  </div>
  </body>
</html>
